{
  "name": "rag-talk-rag-api",
  "version": "1.0.0",
  "description": "RAG API server for RAG talk demo",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "load-data": "ts-node src/load-sample-data-simple.ts",
    "test-embeddings": "ts-node src/test-local-embeddings.ts",
    "test-rag-modes": "ts-node src/test-rag-modes.ts",
    "test-vector-search": "ts-node src/test-vector-search.ts",
    "test-combined-knowledge": "ts-node src/test-combined-knowledge.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@types/natural": "^6.0.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "natural": "^8.1.0",
    "openai": "^4.104.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "xai",
    "api",
    "rag",
    "demo"
  ],
  "author": "",
  "license": "MIT"
}
